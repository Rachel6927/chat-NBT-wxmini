.sidebar {
  position: fixed;
  top: 0;
  left: -80%;
  width: 80%;
  height: 100%;
  background-color: #ffffff;
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.sidebar.open {
  transform: translateX(100%);
}

.sidebar-header {
  padding: 20px;
  border-bottom: 1px solid #eee;
}



.chat-history {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30px 20px 0;
}

.history-title {
  font-size: 16px;
  font-weight: 500;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
}

.history-scroll {
  flex: 1;
  overflow-y: auto;
}

.history-item {
  padding: 12px 0;
  border-bottom: 1px solid #f5f5f5;
  cursor: pointer;
}

.history-text {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.history-time {
  font-size: 12px;
  color: #999;
}

.user-info {
  padding: 20px;
  border-top: 1px solid #eee;
}

.login-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  padding: 8px 0;
}

.user-profile {
  padding: 20px;
  display: flex;
  align-items: center;
  border-top: 1px solid #eee;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.nickname {
  margin-left: 12px;
  font-size: 14px;
  color: #333;
}

.sidebar-footer {
  padding: 20px;
  border-top: 1px solid #eee;
}

.clear-history {
  width: 100%;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  padding: 8px 0;
}

.sidebar-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}