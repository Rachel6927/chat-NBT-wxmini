.sidebar {
  position: fixed;
  top: 0;
  left: -80%;
  width: 80%;
  height: 100%;
  background-color: #262626; /* 改变背景颜色为深色 */
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.5); /* 增强阴影效果 */
  transition: transform 0.3s ease;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.sidebar.open {
  transform: translateX(100%);
}

.chat-history {
  display: flex;
  flex-direction: column;
  padding: 30px 10px 0px 20px;
  flex: 1; 
  height: 1px;
}

.history-title {
  font-size: 16px;
  font-weight: 500;
  padding: 15px 0;
  border-bottom: 1px solid #444; /* 调整边框颜色 */
  color: #fff; /* 文字颜色改为白色 */
}

.history-scroll {
  flex: 1;
  overflow-y: auto;
}

.history-item {
  padding: 12px 0;
  border-bottom: 1px solid #333; /* 边框颜色改为较浅的灰色 */
  cursor: pointer;
  display: flex;
  flex-direction: row;
}

.history-left{
  flex:1;
}

.history-text {
  display: block;
  font-size: 14px;
  color: #ddd; /* 文本颜色改为淡色 */
  margin-bottom: 4px;
}

.history-time {
  font-size: 12px;
  color: #999; /* 保持原样 */
}

.delete-btn {
  width: 24px;
  height: 24px;
  display: flex; 
  align-items: center; 
  justify-content: center; 
  overflow: hidden;
}
.delete-btn image {
  width: 100%;
  height: 100%;
}

.user-info {
  padding: 20px;
  border-top: 1px solid #444; /* 调整边框颜色 */
}

.login-btn {
  width: 100%;
  background: #007AFF; /* 更改登录按钮颜色以匹配整体风格 */
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  padding: 8px 0;
}

.user-profile {
  padding: 20px;
  display: flex;
  align-items: center;
  border-top: 1px solid #444; /* 调整边框颜色 */
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.nickname {
  margin-left: 12px;
  font-size: 14px;
  color: #fff; /* 文本颜色改为白色 */
}

.sidebar-footer {
  flex-shrink: 0;
  padding: 20px 0px;
  height: 35px;
  border-top: 1px solid #444; /* 调整边框颜色 */
  color: #ddd; /* 文本颜色改为淡色 */
  font-size: 14px;
  text-align: center;
  width: 100%;
}

.clear-history {
  width: 100%;
  background: #333; /* 更改清除历史记录按钮颜色 */
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  padding: 8px 0;
}

.sidebar-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7); /* 增强遮罩层透明度 */
  z-index: 999;
}