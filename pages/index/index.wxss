/* 输入框样式调整 */
.input-box {
  display: flex;
  align-items: center;
  background-color: #262626; /* 改变输入框背景颜色以匹配第一个代码 */
  border-radius: 20px;
  padding: 4px 8px;
  margin: 0 12px;
  border: 1px solid white;
}

.input-box input {
  flex: 1;
  height: 32px;
  font-size: 14px;
  background: transparent;
  margin: 0 8px;
  color: #fff; /* 添加此行以更改输入文本的颜色 */
}

.upload-btn,
.voice-btn,
.send-btn {
  width: 28px;
  height: 28px;
  padding: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn image,
.voice-btn image,
.send-btn image {
  width: 20px;
  height: 20px;
  opacity: 0.7;
}
